<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="bootstrap-dist.php">
    <testsuites>
        <testsuite name="catalog-tests">
            <directory>./opencart/catalog</directory>
        </testsuite>
        <testsuite name="admin-tests">
            <directory>./opencart/admin</directory>
        </testsuite>
        <testsuite name="system-tests">
            <directory>./opencart/system</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
    <php>
        <env name="OC_ROOT" value="../../upload" />
    </php>
</phpunit>
